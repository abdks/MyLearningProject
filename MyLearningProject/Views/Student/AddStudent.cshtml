@model MyLearningProject.DAL.Entities.Student
@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Öğrenci Kaydı</h2>

<form method="post">
    <label>Öğrenci Adı</label>
    <input type="text" name="Name" class="form-control" required />
    <label>Öğrenci Soyadı</label>
    <input type="text" name="Surname" class="form-control" required />
    <label>Öğrenci Maili</label>
    <input type="email" name="Email" class="form-control" required />
    <label>Öğrenci Resimi</label>
    <input type="text" name="Img" class="form-control" required />
    <label>Öğrenci Şifresi</label>
    <input type="password" name="Password" class="form-control" required />
    <br /><br />
    <button class="btn btn-primary">Öğrenciyi Kaydet</button>
</form>