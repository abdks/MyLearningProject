@model MyLearningProject.DAL.Entities.Instructor

@{
    ViewBag.Title = "UpdateInstructors";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitmen Güncelleme Sayfası</h2>

<form method="post">
    <br />
    <input type="hidden" name="InstructorID" value="@Model.InstructorID" />
    <label>Eğitmen Adı</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <br />
    <label>Eğitmen Soyadı</label>
    <input type="text" name="Surname" value="@Model.Surname" class="form-control" />
    <br />
    <label>Facebook</label>
    <input type="text" name="Facebook" value="@Model.Facebook" class="form-control" />
    <br />
    <label>Instagram</label>
    <input type="text" name="Instagram" value="@Model.Instagram" class="form-control" />
    <br />
    <label>Twitter</label>
    <input type="text" name="Twitter" value="@Model.Twitter" class="form-control" />
    <br />

    <label>Eğitmen Görseli</label>
    <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
    <br /><br />

    <button class="btn btn-primary">Eğitmeni Güncelle</button>
</form>
