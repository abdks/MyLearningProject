@model MyLearningProject.DAL.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>

<form method="post">
    <label>Kategori ID</label>
    <br />
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label><br />
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <label>Kategori Resimini Giriniz</label>
    @Html.TextBoxFor(x => x.CategoryImageUrl, new { @class = "form-control" })
    <label>Kategori Ana Sayfada Gözüksün Mü</label>

    @Html.DropDownListFor(x => x.CategoryFilter, new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem { Text = "Evet", Value = "true" },
            new SelectListItem { Text = "Hayır", Value = "false" }
        }, "Value", "Text"),
        new { @class = "form-control" })

    <button class="btn btn-primary">Kategoriyi Güncelle</button>
</form>
