@model MyLearningProject.DAL.Entities.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Kategori Ekleme Sayfası</h2>
<form method="post">
    <label>Kategori Adını Giriniz</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <label>Kategori Resimini Giriniz</label>
    @Html.TextBoxFor(x => x.CategoryImageUrl, new { @class = "form-control" })
    <label>Kategori Ana Sayfada Gözüksün Mü</label>

    @Html.DropDownListFor(x => x.CategoryFilter, new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem { Text = "Evet", Value = "true" },
            new SelectListItem { Text = "Hayır", Value = "false" }
        }, "Value", "Text"),
        new { @class = "form-control" })

    <br /><br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>
