@model List<MyLearningProject.DAL.Entities.Course>
<div class="tab-pane" id="settings" role="tabpanel">
    <div class="card-block">
        @foreach (var item in Model)
        {
            <div class="sl-item">
                <div class="sl-left">
                    @*<img src="~/Templates/material-lite-master/assets/images/users/2.jpg" alt="user" class="img-circle" width="35px" height="35px">*@
                </div>
                <div class="sl-right">
                    <div>
                        <a href="#" class="link">@item.Instructor.Name @item.Instructor.Surname</a>
                        @{
                            int toplamDakika = item.Duration;
                            int saat = toplamDakika / 60;
                            int dakika = toplamDakika % 60;
                            string saatDakika = saat + " saat " + dakika + " dakika";
                        }
                        <span class="sl-date">@saatDakika</span>
                        <div class="m-t-20 row">
                            <div class="col-md-3 col-xs-12">
                                <img src="@item.ImageUrl" alt="kullanıcı" class="img-responsive radius" width="200px" height="150px">
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <p>
                                    @if (item.Description.Length > 200)
                                    {
                                        @item.Description.Substring(0, 200) @* İlk 200 karakteri göster *@
                                        <a href="#" data-toggle="tooltip" title="@item.Description">...</a> @* Tüm metni göstermek için bir bağlantı ekle *@
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                </p>
                                <a href="#" class="btn btn-success">Kursa Git</a>
                            </div>
                        </div>
                        <div class="like-comm m-t-20">
                            <a href="javascript:void(0)" class="link m-r-10">0 yorum</a>
                            <a href="javascript:void(0)" class="link m-r-10"><i class="fa fa-heart text-danger"></i> 4.7 Puan</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        }
    </div>
</div>
