@model MyLearningProject.DAL.Entities.Course
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Kurs Ekleme Sayfası</h2>

<form method="post">
    <label>Kategori Adını Giriniz</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>

