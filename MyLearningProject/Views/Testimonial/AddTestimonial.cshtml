@model MyLearningProject.DAL.Entities.Testimonial

@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Ekleme Sayfası</h2>

<form method="post">
    <label>Referansınızın Adını Ve Soyadını Giriniz</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <label>Referans Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <label>Referans Resimi</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <label>Referans Yorumu</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <label>Referans Statüsü</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-primary">Referansı Kaydet</button>
</form>
