@model List<MyLearningProject.DAL.Entities.Instructor>
   
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Instructors</h6>
            <h1 class="mb-5">Expert Instructors</h1>
        </div>
        <div class="row g-4">
            @{
                int döngüSayacı = 0;
            }

            @foreach (var x in Model)
            {
                if (döngüSayacı >= 4)
                {
                    break; // 4 kez döndükten sonra döngüyü sonlandır
                }
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img width="300" height="300" src="@x.ImageUrl" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                <a class="btn btn-sm-square btn-primary mx-1" href="@x.Facebook"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href="@x.Twitter"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href="@x.Instagram"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@x.Name @x.Surname</h5>
                            <small>Eğitmen</small>
                        </div>
                    </div>
                </div>
                döngüSayacı++;

            }

            
            
            
        </div>
    </div>
</div>
